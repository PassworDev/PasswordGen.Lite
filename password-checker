<meta name="description" content="Check your password strength and get recommended stronger passwords.">

<style>
body {
  margin: 0;
  font-family: Arial, sans-serif;
  background: #ffffff;
  color: #222;
  line-height: 1.6;
}

.container {
  max-width: 700px;
  margin: 40px auto;
  padding: 20px;
  text-align: center;
}

input[type="text"], button {
  padding: 10px;
  margin-top: 10px;
  width: 100%;
  border-radius: 8px;
  border: 1px solid #ddd;
}

button {
  background-color: #1d8cf8;
  color: white;
  border: none;
  cursor: pointer;
  font-weight: bold;
}

.result {
  margin-top: 20px;
  font-weight: 500;
}

.suggestion {
  margin-top: 15px;
  font-style: italic;
  color: #555;
}
</style>
